
@using TicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var u in Model)
    {
<tr>
    <td>@u.Urunid</td>
    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat</td>
    <td>@u.SatisFiyat</td>
    <td>@u.Kategori.KategoriAd</td>
    <td>
        <img src="@u.UrunGorsel" style="width:100px; height:50px" />
    </td>
    <td>
        <a href="/Urun/UrunSil/@u.Urunid" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-success">Güncelle</a>
    </td>
</tr>
    }
</table>
<a href="/Urun/YeniUrun" class="btn btn-info">Yeni Ürün</a>
